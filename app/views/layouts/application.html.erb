<!DOCTYPE html>
<html>
<head>
  <title>Learningwithus</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrap">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Learning With Us', root_path, class: 'navbar-brand' %>
        <!-- <a class="navbar-brand" href="">Learning With Us</a> -->
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <!--       <ul class="nav navbar-nav">
          <li><a href="#">Link</a></li>
        </ul> -->
        <ul class="nav navbar-nav navbar-right">
          <!-- <li><a href="#">Link</a></li> -->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Learning Topics<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'All Topics', topics_path %>
              </li>
              <li class="divider"></li>
              <li>
              <%= link_to 'Colors', colors_path %>
              </li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <%= yield %>

</div>

<br class="clr" />

<!-- <div id="footer">
  <div class="container">
    <b>Footer Here</b>
    <br>
    <%= link_to 'link', '#' %>
  </div>
</div> -->

<div id="footer">
  <div class="container">  
      <div class="col-xs-12 col-sm-6 foot-space text-center">
        <b>Created by Christopher Ross</b>
        <br />
        <%= link_to 'http://www.crossphd.com', :target => "_blank" do %>
          <%= image_tag 'crossphd.jpg', class: 'social-button' %>
        <% end %>
        <%= mail_to "chris@crossphd.com" do %>
          <span>chris@crossphd.com</span>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 foot-space text-center social">
        <b>Social</b>
        <br>
        <%= link_to 'https://twitter.com/crossphd', :target => "_blank" do %>
          <%= image_tag 'twitter2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://github.com/CRossPhD', :target => "_blank" do %>
          <%= image_tag 'github2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://medium.com/@crossphd', :target => "_blank" do %>
          <%= image_tag 'medium2.png', class: 'social-button' %>
        <% end %>
      </div>
  </div>
</div>

</body>
</html>
